<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Wypożyczalnia</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Lobster&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        html, body {
            height: 100%;
        }

        .main-container {
            min-height: 100%;
            display: flex;
            flex-direction: column;
        }

        .content {
            flex: 1;
        }

        .navbar-brand {
            font-family: 'Lobster', cursive;
            font-size: 2rem;
            font-style: italic;
            position: absolute;
            left: 50%;
            transform: translateX(-50%);
            color: white !important;
        }
    </style>
</head>
<body class="d-flex flex-column">
    <div class="main-container">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark position-relative">
            <div class="container-fluid">
                <button class="navbar-toggler me-3" type="button" data-bs-toggle="collapse" data-bs-target="#hamburgerMenu" aria-controls="hamburgerMenu" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="hamburgerMenu">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="/Books">Książki</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Rentals">Wypożyczenia</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Users">Użytkownicy</a>
                        </li>
                    </ul>
                </div>
                <a href="/" class="navbar-brand">Biblioteka</a>
                <div class="ms-auto d-flex align-items-center">
                    <a class="nav-link text-light me-3" href="/Account/Login">Zaloguj</a>
                    <a class="nav-link text-light" href="/Account/Register">Rejestracja</a>
                </div>
            </div>
        </nav>
        <div class="content container mt-4">
            @RenderBody()
        </div>
        <footer class="footer mt-auto py-3 bg-light">
            <div class="container">
                <span class="text-muted">© 2025 Wypożyczalnia. Wszystkie prawa zastrzeżone.</span>
            </div>
        </footer>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
