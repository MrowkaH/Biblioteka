@model Biblioteka.Models.User

@{
    ViewData["Title"] = "Delete User";
}

<h1>Delete User</h1>

<p>Czy na pewno chcesz usunąć użytkownika <strong>@Model.Name</strong>?</p>

<form method="post" asp-action="Delete" asp-route-id="@Model.Id" asp-controller="Users">
    <button type="submit" class="btn btn-danger">Usuń</button>
    <a asp-action="ManageUsers" asp-controller="Admin" class="btn btn-secondary">Anuluj</a>
</form>
