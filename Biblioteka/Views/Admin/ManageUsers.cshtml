@model IEnumerable<Biblioteka.Models.User>

<h1>Manage Users</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td>@user.Role?.Name</td>
                <td>
                    <a asp-controller="Users"
                       asp-action="Edit"
                       asp-route-id="@user.Id"
                       class="btn btn-warning">
                        Edit
                    </a>

                    <a asp-controller="Users"
                       asp-action="Delete"
                       asp-route-id="@user.Id"
                       class="btn btn-danger">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
