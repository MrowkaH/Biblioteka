@model IEnumerable<Biblioteka.Models.Book>

<h1>Available Books</h1>

<table class="table">
    <thead>
        <tr>
            <th>Tytuł</th>
            <th>Autor</th>
            <th>ISBN</th>
            <th>Dostępne Kopie</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Tytul</td>
                <td>@book.Autor</td>
                <td>@book.ISBN</td>
                <td>@book.DostepneKopie</td>
                <td>
                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        <a asp-controller="Rentals"
                           asp-action="Create"
                           asp-route-bookId="@book.Id"
                           class="btn btn-success">Wypożycz</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
