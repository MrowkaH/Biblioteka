@model Biblioteka.Models.Book

<h2>Delete Book</h2>

<p>Czy na pewno chcesz usunąć książkę: <strong>@Model.Tytul</strong>?</p>

<form method="post" asp-action="Delete" asp-controller="Books">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Usuń</button>
    <a asp-controller="Admin" asp-action="ManageBooks" class="btn btn-secondary">Anuluj</a>
</form>
